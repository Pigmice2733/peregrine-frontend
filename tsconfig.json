{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ESNext",
    "sourceMap": true,
    "baseUrl": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "files": ["./src/**/*.tsx", "src/**/*.ts", "*.ts"],
  "include": ["types.d.ts", "./src/**/*.test.tsx"]
}
