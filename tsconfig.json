{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h",
    "lib": ["esnext", "dom", "webworker"],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["types.d.ts", "**/*.tsx", "**/*.ts"]
}
