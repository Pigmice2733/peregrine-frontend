{
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintIgnore": [
    "/dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "check-lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx . && prettier --list-different --ignore-path .gitignore '**/*.{j,t}s{x,}'",
    "lint": "eslint --ignore-path .gitignore --fix --ext .js,.ts,.tsx . && prettier --write --ignore-path .gitignore '**/*.{j,t}s{x,}'",
    "type:watch": "tsc --noEmit --pretty --watch",
    "type": "tsc --noEmit --pretty",
    "start": "parcel index.html"
  },
  "eslintConfig": {
    "extends": [
      "plugin:caleb/recommended",
      "plugin:caleb/preact",
      "plugin:caleb/jest"
    ]
  },
  "dependencies": {
    "preact": "8.3.1",
    "preact-router": "2.6.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.ts$": "./jest-transform",
      "\\.tsx$": "./jest-transform"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).(j|t)s?(x)"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/jest": "^23.3.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.6.1",
    "eslint-plugin-caleb": "^1.6.0",
    "jest": "^23.6.0",
    "parcel-bundler": "^1.10.1",
    "postcss-modules": "^1.4.1",
    "preact-testing-library": "^0.2.1",
    "typescript": "^3.1.1"
  }
}
