{
  "name": "peregrine-frontend",
  "private": true,
  "description": "A scouting app for FRC competitions. This is the frontend, written in TypeScript with Preact",
  "license": "MIT",
  "repository": "Pigmice2733/peregrine-frontend",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "check-lint": "eslint --format=pretty --ignore-path .gitignore --ext .js,.ts,.tsx . && prettier --list-different --ignore-path .gitignore \"**/*.{j,t}s{x,}{on,}\"",
    "eslint": "eslint --format=pretty --ignore-path .gitignore --fix --ext .js,.ts,.tsx .",
    "lint": "eslint --format=pretty --ignore-path .gitignore --fix --ext .js,.ts,.tsx . && prettier --write --ignore-path .gitignore \"**/*.{j,t}s{x,}{on,}\"",
    "new-route": "hygen route new",
    "rollup-watch": "rollup -c rollup.config.js --watch",
    "start": "vite",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "type": "tsc",
    "type:watch": "tsc --watch"
  },
  "dependencies": {
    "@mdi/js": "5.8.55",
    "ganalytics": "3.1.3",
    "matchit": "1.1.0",
    "polished": "4.2.2",
    "preact": "10.19.3",
    "qss": "2.0.3"
  },
  "devDependencies": {
    "@babel/preset-typescript": "7.23.3",
    "@calebeby/preact-testing-library": "0.0.4",
    "@linaria/core": "6.0.0",
    "@preact/preset-vite": "2.7.0",
    "@testing-library/jest-dom": "5.14.1",
    "@types/jest": "26.0.24",
    "@types/node-fetch": "2.5.12",
    "@types/sharp": "0.29.2",
    "@wyw-in-js/vite": "0.2.2",
    "babel-jest": "26.6.3",
    "babel-preset-vite": "1.1.1",
    "clsx": "1.1.1",
    "dotenv": "8.6.0",
    "eslint": "7.32.0",
    "eslint-formatter-pretty": "4.1.0",
    "eslint-plugin-caleb": "11.0.0",
    "fake-indexeddb": "3.1.7",
    "hygen": "1.6.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "node-fetch": "2.6.5",
    "postcss": "8.4.32",
    "postcss-calc": "9.0.1",
    "postcss-color-mod-function": "3.0.3",
    "postcss-css-variables": "0.19.0",
    "postcss-import": "15.1.0",
    "postcss-preset-env": "9.3.0",
    "prettier": "2.2.1",
    "prompts": "1.2.1",
    "rollup": "4.9.1",
    "sharp": "0.29.2",
    "templite": "1.2.0",
    "type-fest": "0.21.3",
    "typescript": "5.3.3",
    "vite": "5.0.10"
  },
  "browserslist": [
    ">.5% in us",
    "not ie 11",
    "not ios_saf <11.1",
    "not edge <79",
    "not android <81"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:caleb/recommended",
      "plugin:caleb/preact",
      "plugin:caleb/jest"
    ],
    "rules": {
      "caleb/jest/expect-expect": "off",
      "no-return-await": "off",
      "caleb/react/display-name": "off",
      "no-else-return": [
        "error",
        {
          "allowElseIf": true
        }
      ],
      "caleb/@typescript-eslint/ban-ts-ignore": "off",
      "caleb/react/react-in-jsx-scope": "off",
      "no-restricted-imports": [
        "error",
        {
          "paths": [
            {
              "name": "preact",
              "importNames": [
                "h",
                "Fragment"
              ],
              "message": "The JSX runtime is injected automatically"
            }
          ]
        }
      ]
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.css$": "identity-obj-proxy",
      "src/(.*)": "<rootDir>/src/$1"
    },
    "transform": {
      "\\.ts$": "./jest-transform",
      "\\.tsx$": "./jest-transform"
    },
    "setupFilesAfterEnv": [
      "./jest.setup.ts"
    ],
    "testEnvironment": "jsdom",
    "testRunner": "jest-circus/runner",
    "testMatch": [
      "**/?(*.)+(spec|test).(j|t)s?(x)"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "type": "module"
}
