{
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "check-lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx . && prettier --list-different --ignore-path .gitignore '**/*.{j,t}s{x,}'",
    "lint": "eslint --ignore-path .gitignore --fix --ext .js,.ts,.tsx . && prettier --write --ignore-path .gitignore '**/*.{j,t}s{x,}'",
    "type:watch": "tsc --noEmit --pretty --watch",
    "type": "tsc --noEmit --pretty",
    "start": "parcel index.html",
    "build": "node build.js"
  },
  "eslintConfig": {
    "extends": [
      "plugin:caleb/recommended",
      "plugin:caleb/preact",
      "plugin:caleb/jest"
    ],
    "rules": {
      "caleb/react/display-name": "off"
    }
  },
  "dependencies": {
    "preact": "8.3.1",
    "preact-router": "2.6.1",
    "systemjs": "^2.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.ts$": "./jest-transform",
      "\\.tsx$": "./jest-transform"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).(j|t)s?(x)"
    ]
  },
  "browserslist": [
    ">3%"
  ],
  "devDependencies": {
    "@babel/core": "7.1.2",
    "@babel/plugin-proposal-class-properties": "7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-template-literals": "^7.0.0",
    "@babel/preset-typescript": "7.1.0",
    "@types/jest": "23.3.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "cpy": "7.0.1",
    "eslint": "5.7.0",
    "eslint-plugin-caleb": "1.9.0",
    "jest": "23.6.0",
    "kleur": "^2.0.2",
    "parcel-bundler": "1.10.3",
    "postcss": "^7.0.4",
    "postcss-calc": "^6.0.2",
    "postcss-css-variables": "^0.11.0",
    "postcss-import": "^12.0.0",
    "postcss-modules": "1.4.1",
    "postcss-preset-env": "^6.0.7",
    "preact-testing-library": "0.2.1",
    "prettier": "1.14.3",
    "rollup": "0.66.6",
    "rollup-plugin-babel": "4.0.3",
    "rollup-plugin-node-resolve": "3.4.0",
    "rollup-plugin-postcss": "1.6.2",
    "rollup-plugin-terser": "^3.0.0",
    "templite": "^1.1.0",
    "typescript": "3.1.3"
  },
  "engines": {
    "node": "10"
  }
}
